createDb:
 # docker exec -it postgres /bin/sh                             # Entra dentro do diretorio.
 #  pwd                                                         # Entra na pasta PWS.
 #  ls -l                                                       # Lista todos os arquivos.
    createdb --username=postgres --owner=postgres go_finance    # Cria o banco de dados

postgres:
    docker run --name -p 5432:5432 -e POSTGRES_PASSWORD=postgres -d postgres:14-alpine

migrateup:
    migrate -path  db/migration -database "postgresql://postgres:postgres@localhost:5432/go_finance?sslmode=disable" -verbose up

migrationDrop:
    migrate -path  db/migration -database "postgresql://postgres:postgres@localhost:5432/go_finance?sslmode=disable" -verbose drop

test:
    go test -v -cover ./...
#kjconroy/sqlc:
#   docker run --rm -v "%cd%:/src" -w /src kjconroy/sqlc generate
#    - * docker run --rm -v $(pwd):/src -w /src kjconroy/sqlc generate

.PHONY: createDb postgres migrateup migrationDrop test
